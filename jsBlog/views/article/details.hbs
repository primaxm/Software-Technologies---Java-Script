<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>

                <small class="author">
                    {{this.User.fullName}}
                </small>

                <small class="author">
                    {{this.data}}
                </small>
                <footer>
                    <div class="pull-right">
                        <a class="btn btn-primary btn-xs" href="/article/edit/{{this.id}}">Edit</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{this.id}}">Delete</a>
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>